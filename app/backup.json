{
  "expo": {
    "name": "drinxapp",
    "slug": "drinxapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "drinxapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "mobi.drinx.drinxapp",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "This app needs access to location when open.",
        "NSLocationAlwaysUsageDescription": "This app needs access to location when in the background.",
        "NSPushNotificationUsageDescription": "This app uses push notifications to tell you when there are new Tix available."
      },
      "config": {},
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDyhXhUCj3D97ChKwW_XUc6sKb-jYHKCMY"
        }
      },
      "package": "mobi.drinx.drinxapp",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "NOTIFICATIONS",
        "ACCESS_NETWORK_STATE",
        "WAKE_LOCK",
        "INTERNET",
        "POST_NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_FULL_SCREEN_INTENT",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "FOREGROUND_SERVICE",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      "expo-build-properties",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "sounds": ["./assets/sounds/cooler.mp3"],
          "iosDisplayInForeground": true,
          "androidMode": "default",
          "androidCollapsedTitle": "#{unread_notifications} new notifications",
          "androidSmallIcon": "./assets/images/notification-icon.png"
        },

      ],

      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0",
            "kotlinVersion": "1.8.0",
            "enableProguardInReleaseBuilds": true,
            "enableSeparateBuildPerCPUArchitecture": false,
            "networkSecurityConfig": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      //"color": "#ffffff",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "dc2899d2-aefe-4744-854b-2430799e984b"
      }
    }
  }
}
